<Window x:Class="exercise2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exercise2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="LawnGreen">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Column="0">
            <TextBlock Background="Magenta" Text="Hello" Margin="20"></TextBlock>
        </Viewbox>

        <Viewbox Grid.Column="1">
            <TextBlock Background="Magenta" Text="Hello" Margin="20"></TextBlock>
        </Viewbox>

        <Viewbox Grid.Column="2">
            <TextBlock Background="Magenta" Text="Hello" Margin="0"></TextBlock>
        </Viewbox>

        <Viewbox Grid.Column="3" Stretch="UniformToFill">
            <TextBlock Background="Magenta" Text="Hello"></TextBlock>
        </Viewbox>
    </Grid>
</Window>
